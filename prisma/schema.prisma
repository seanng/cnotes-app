generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CREATOR
  BRAND
}

model User {
  id    String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  email String  @unique
  password String
  role UserRole
}

model Creator {
  id       String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  userId   String    @db.ObjectId
  firstName  String
  lastName  String
  email String
}

model Brand {
  id       String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  userId   String    @db.ObjectId
  firstName  String
  lastName  String
  email String
  companyName String @unique
}
